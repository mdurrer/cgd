<MODE>

	<PROPS>
		<PROPERTY NAME="lineComment" VALUE=";" />
		<PROPERTY NAME="contextInsensitive" VALUE="true"/>
                <PROPERTY NAME="wordBreakChars" VALUE=",+-=&lt;&gt;/|%^&amp;*" />
	</PROPS>

	<RULES HIGHLIGHT_DIGITS="FALSE" IGNORE_CASE="TRUE">

		<EOL_SPAN TYPE="COMMENT1">;</EOL_SPAN>

                <!-- Literal3 are binary numbers -->
                <SEQ_REGEXP HASH_CHARS="%" AT_WORD_START="TRUE" TYPE="LITERAL3">0b[01]+|%[01.#]+</SEQ_REGEXP>
                <!-- Literal4 are ram-addresses -->
                <SEQ_REGEXP HASH_CHARS="$&amp;0123456789" AT_WORD_START="TRUE" TYPE="LITERAL4">(\$|0x)[0-9a-fA-F]+|&amp;[0-7]+|[0-9]+\.[0-9]+|[0-9]+</SEQ_REGEXP>
                <!-- digit are numbers -->
                <SEQ_REGEXP HASH_CHARS="#" AT_WORD_START="TRUE" TYPE="DIGIT">#[&lt;&gt;^]?((\$|0x)[0-9a-fA-F]+|%[01.#]+|0b[01]+|&amp;[0-7]+|[0-9]+\.[0-9]+|[0-9]+|[a-zA-Z_.][a-zA-Z0-9_.]*|'.*?'|".*?")</SEQ_REGEXP>
                <!-- keyword4 are jump labels-->
                <SEQ_REGEXP HASH_CHARS="." AT_WORD_START="TRUE" TYPE="KEYWORD4">\.[0-9a-zA-Z]+</SEQ_REGEXP>

		<SPAN TYPE="LITERAL2" NO_LINE_BREAK="TRUE">
			<BEGIN>'</BEGIN>
			<END>'</END>
		</SPAN>

		<SPAN TYPE="LITERAL2" NO_LINE_BREAK="TRUE">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>

                <SEQ_REGEXP HASH_CHARS="!" TYPE="KEYWORD3">!(08|16|24|32|8|address|addr|binary|bin|byte|by|cbm|fill|pet|raw|scrxor|scr|text|tx|word|wo|align|al|as|convtab|cpu|ct|do|endoffile|eof|error|fi|for|ifdef|ifndef|if|initmem|macro|pseudopc|realpc|rl|rs|serious|set|sl|source|src|subzone|sz|to|warn|zn|zone)\b</SEQ_REGEXP>

		<KEYWORDS>
			<!-- Instructions: standard -->
